function atp_sas_get_file_browser($ajax) {
  $is_ajax = $ajax === 'ajax';
  $output = array();
  $output['sas_dir_browser_wrapper'] = array(
    '#type' => 'container',
    '#attributes' => array(
      'id' => 'sas-dir-browser-wrapper',
    ),
  );
  $output['sas_dir_browser_wrapper'] += atp_sas_ajax_get_file_browser();
  if ($is_ajax) {
    $render = render($output);
    die($render);
  }
  else {
    return $output;
  }
}

